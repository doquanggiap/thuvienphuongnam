<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Thêm sách"
            android:textColor="#F30A0A"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tên sách"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTenSach"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edtdesign"
            android:hint="Nhập tên sách"
            android:paddingLeft="10dp"
            android:textSize="23sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tiền thuê"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTienThue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edtdesign"
            android:hint="Nhập tiền thuê"
            android:paddingLeft="10dp"
            android:textSize="23sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Loại sách"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/edtTenLoai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edtdesign"
            android:hint="Nhập loại sách"
            android:paddingLeft="10dp"
            android:textSize="23sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/dangnhap"
                android:text="Thêm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/huy"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>